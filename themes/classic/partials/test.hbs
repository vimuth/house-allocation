{{#if house}}
<div id="htmlList" style="display: inline">
	<ul class="list-group">
		<h4 class="list-group-item-heading">
			{{house}}
			<button onclick="viewEmailList();return false;" type="button"
				style="" class="btn btn-warning btn-xs pull-right">View as
				a Email List</button>
		</h4>
		{{#each Member}}
		<li class="list-group-item">{{name}}</li> {{/each}}
	</ul>
</div>

<div id="emailList">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">
				Copy List to Email :
				<button onclick="viewHTMLListSpead();" type="button" style=""
					class="btn btn-warning btn-xs pull-right">Back</button>
			</h3>
		</div>
	</div>
	<textarea class="form-control" id="eventDescription" rows="15">{{emailString}}</textarea>
</div>
<div id="emailListSpead">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">
				Copy List to Email :
				<button onclick="viewHTMLList();" type="button" style=""
					class="btn btn-warning btn-xs pull-right">Back</button>
			</h3>
		</div>
	</div>
	<textarea class="form-control" id="eventDescription" rows="15">{{emailString}}</textarea>


</div>

<script>
	function viewEmailList() {
		$('#htmlList').hide();
		$('#emailListSpead').hide();
		$('#emailList').show();
	}

	function viewHTMLList() {
		$('#emailList').hide();
		$('#emailListSpead').hide();
		$('#htmlList').show();
	}
	function viewHTMLListSpread() {
		$('#emailList').hide();
		$('#htmlList').hide();
		$('#emailListSpead').show();
	}
</script>


