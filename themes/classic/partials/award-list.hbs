<div style="padding-top: 10px">
	<h3><b>Current Elections</b></h3>
	<!-- <table class="table" id="activityTable" border="2">-->
	
	<table class="table">
		<thead>
			<tr>
				
				<th><h4 style="color:blue">Award name</h4></th>
				<th><h4 style="color:blue">Event instance name</h4></th>
				<th></th>
				
			</tr>
		</thead>
		<tbody>



			{{#each Entry}}

			<!--
			<tr onclick="document.location = {{url "/awards.jag/"}}{{event_award_id}}">  -->
			<tr>
				<td rowspan="2"><b>{{eventName}}</b><br />Description:{{eventDescription}}
				</td>
				<td rowspan="2"><b>{{awardName}}</b><br />Description:{{awardDescription}}
				</td>
				<td><button
						onclick="vote('{{event_award_instance_id}}');return false;"
						type="button" class="btn btn-warning btn-xs pull-right">
						Vote for this election</button></td>

			</tr>

			{{/each}}

		</tbody>
	</table>
</div>

<script>
	function vote(event_award_instance_id) {
		//document.location.href = '{{url "/votes/"}}' + id;
		document.location.href = '{{url "/edit-event/"}}' + event_award_instance_id;
		//alert("rgeyyyyy");
		
	}
	
</script>


