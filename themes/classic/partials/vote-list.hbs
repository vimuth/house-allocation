<div style="padding-top: 10px">
	<h2>Nominees </h2>


	<form id="activityForm" name="newActivity"
			>
<table class="table" id="activityTable">
	<tbody>	
		
				{{#each names}}
 				
 					
 					<tr><input type="radio" id="Nominee_name" value="{{name}}"  onclick="addNominee();" >{{name}}<br><br> </tr>
				{{/each}}				
	
		</tbody>
</table>

