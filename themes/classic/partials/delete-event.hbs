<div>

	<div style="background: #d9534f" class="panel panel-default">
		<div class="panel-body">
			<span class="glyphicon glyphicon-warning-sign"></span> Are you sure
			you want to delete this event? Deleting this event will also delete
			the following event instances
		</div>
	</div>

	<div class="list-group">
		{{#each Entry}} <a href='{{url "/events/"}}{{id}}'
			class="list-group-item"
			style='border-width: 2px; border-color: #d9534f'> {{name}} :
			{{description}} : {{startDate}} : {{endDate}} </a> {{/each}}
	</div>

	<div class="btn-group">
		<button type="button" onclick="document.location.href='{{url "/events/"}}'" class="btn btn-info">Cancel</button>
		<button type="button" onclick="document.location.href='{{url "/edit-event/"}}{{id}}'" class="btn btn-warning">Edit Event</button>
		<button type="button"
			onclick="deleteEvent({{id}});" class="btn btn-danger">Delete Event</button>
	</div>
</div>

<script>
function deleteEvent(id) {
		if (confirm("Are you sure you want delete this event?")) {

			$.ajax({
				type : "DELETE",
				contentType : "application/json",
				url : "{{url "/delete-event/"}}" + id,

				data : {},
				success : function(msg) {

					if (msg.success) {
						document.location.href='{{url "/events/"}}';
					} else {
						alert('Error - unable to delete event.');
					}
				}
			});

		}
}
</script>
