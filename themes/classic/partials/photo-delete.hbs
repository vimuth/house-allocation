
<h4>Select files you want to delete</h4>
<form action="delete-photo" method="post">
	<div class="form-group col-sm-offset-0 col-sm-10">
		<div class="col-sm-offset-0 col-sm-10">
			<button type="submit" class="btn btn-danger">Delete</button>
		</div>
		<table>
			{{#each file}}
			<tr>
				<td>{{#if name1}}
					<div style="position: relative; padding: 10px">
						<img src="/TestApp2/images/{{name1}}" width="300" height="200">
						<label> <input type="checkbox" name="name"
							value="{{name1}}"
							style="position: absolute; width: 10px; left: 10px; top: 10px;">
						</label>
					</div> {{/if}}
				</td>
				<td>{{#if name2}}
					<div style="position: relative; padding: 10px">
						<img src="/TestApp2/images/{{name2}}" width="300" height="200">
						<label> <input type="checkbox" name="name"
							value="{{name2}}"
							style="position: absolute; width: 10px; left: 10px; top: 10px;">
						</label>
					</div>{{/if}}
				</td>
				<td>{{#if name3}}
					<div style="position: relative; padding: 10px">
						<img src="/TestApp2/images/{{name3}}" width="300" height="200">
						<label> <input type="checkbox" name="name"
							value="{{name3}}"
							style="position: absolute; width: 10px; left: 10px; top: 10px;">
						</label>
					</div>{{/if}}
				</td>
			</tr>
			{{/each}}
		</table>

	</div>


</form>