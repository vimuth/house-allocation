<div>
	<h3 style="margin-top: 0px">{{title}} :</h3>
	<div class="list-group">
		{{#each events}} <a style="margin: 0px; padding: 0px; border-width:0px"
			href='{{url "/event-instance/"}}{{id}}' class="list-group-item">

			<div  class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">{{name}}</h3>
				</div>
				<div style="margin:10px" class="row">
					<div class="col-md-12">{{description}}</div>
				</div>
				<div style="margin: 0px; padding: 0px" class="row">

					<div style="margin: 10px;" class="col-md-3">

						
						<b>Start Date :</b>
						<div class="startDate">{{startDate}}</div>
						<b>End Date :</b>
						<div class="endDate">{{endDate}}</div>

						
					</div>
					{{#if activities}}

					<div class="col-md-8">

						<p class="list-group-item-text">

							<b>Up coming activities</b>
						<table class="table">
							<thead>
								<th>name</th>
								<th>description</th>
								<th>venue</th>
								<th>Date</th>
							</thead>
							<tbody>

								{{#each activities}}
								<tr>
									<td>{{name}}</td>
									<td>{{description}}</td>
									<td>{{venue}}</td>
									<td><div class="date">{{datetime}}</div></td>
								</tr>
								{{/each}}

							</tbody>
						</table>

						</p>
					</div>
					{{/if}}
				</div>
			</div>

		</a>
		<div>
			<br />
		</div>
		{{/each}}

	</div>
</div>


<script>
	$(".date").each(function() {
		var datetime = new Date($(this).html());
		$(this).html(datetime.toDateString());
	});

	$(".startDate").each(function() {
		var datetime = new Date($(this).html());
		$(this).html(datetime.toDateString());
	});

	$(".endDate").each(function() {
		var datetime = new Date($(this).html());
		$(this).html(datetime.toDateString());
	});
</script>