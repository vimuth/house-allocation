<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">{{eventInstance.name}}</h3>
	</div>
	<div class="panel-body">Description :
		{{eventInstance.description}}</div>

	<div class="panel-body">

		<div class="panel">Activities :</div>

		<ul class="list-group">
			{{#each activities}} 
			
				<li class="list-group-item">
					<h4 class="list-group-item-heading">{{name}}</h4>
					<p>
						{{description}}
						<span class="label label-default pull-right">
						{{#if_eq type "G"}}Group{{/if_eq}}
						{{#if_eq type "I"}}Individual{{/if_eq}} 
						</span><br/>
						{{#if winner}}
							<h4>Results :</h4>
								<ul class="list-group">
								{{#each winner}}

									<li class="list-group-item">
										<h5 style="margin-top: 0px; padding-top: 0px; margin-bottom: 0px;">
											{{rank}} : {{description}} <span
												class="label label-primary pull-right">{{winner}} </span>
										</h5>
									</li> 
								{{/each}}
						</ul> 
						{{/if}}
					</p>
				</li> 
			{{/each}}
		</ul>

		<div class="panel">Awards :</div>

		<ul  class="list-group">
			{{#each awards}} <li style="border-width:2px; border-color:#000000" class="list-group-item">

				<h4 class="list-group-item-heading">{{name}}</h4>




				<p>
					{{description}} <span class="label label-default pull-right">{{#if_eq
						type "G"}}Group{{/if_eq}}{{#if_eq type "I"}}Individual{{/if_eq}}</span> <span
						class="label label-primary pull-right" id="voteLabel">{{#if_eq
						isVote "true"}}Vote{{/if_eq}}</span>
					
					{{#if winner}}
							<h4>Winner :</h4>
								<ul class="list-group">
								{{#each winner}}

									<li class="list-group-item">
										<h5 style="margin-top: 0px; padding-top: 0px; margin-bottom: 0px;">
											{{name}}
										</h5>
									</li> 
								{{/each}}
						</ul> 
						{{/if}}
						
				</p>
			</li> 
			{{/each}}
		</ul>
	</div>
</div>