<%
var caramel;
var log = new Log();
var verb = request.getMethod();

(function () {
	var body = "Welcome";
	var admin= session.get('role')=='admin';

	var username=session.get('username');

	if(username==null){
		response.sendRedirect("/HouseManagement/login.jag?"+request.getRequestURI());
		return;
	}
	
	log.debug("logged in as : " + username);


	var path = "/images";
	var file = new File(path);

	var file_list = file.listFiles();
	var name_list = [];

	for(i=1;i<file_list.length;i++){
		if(file_list[i].getName() !='.DS_Store'){
			name_list.push({
				'name':file_list[i].getName()});
		}
	}


	file.close();
	
	caramel = require('caramel');
	caramel.render({
		'header':{
		'username': username,
		'role': admin
	},
	'title': {
	text :'WSO2 House Competition'},
	'body': {
	text:body,'file':name_list},
	'sidenav' :{
	'admin': admin , 'house':session.get('house')}

	});
}());
%>

